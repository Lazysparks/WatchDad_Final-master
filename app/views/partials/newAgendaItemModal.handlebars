<div class="modal fade" id="newAgendaItemModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Nieuw roosteritem</h4>
            </div>
            <div class="modal-body">
                <form id="new-agenda-item-form" class="form form-horizontal" action="/profile/{{ profile.id}}/agenda" method="post">
                    <div class="form-group">
                        <label for="date" class="col-sm-2 control-label">Datum</label>
                        <div class="col-sm-10">
                            <input type="date" name="date" class="form-control" id="date" placeholder="Datum">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="startTime" class="col-sm-2 control-label">Start tijd</label>
                        <div class="col-sm-10">
                            <input type="time" name="startTime" class="form-control" id="startTime" placeholder="Start tijd">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="endTime" class="col-sm-2 control-label">Eind tijd</label>
                        <div class="col-sm-10">
                            <input type="time" name="endTime" class="form-control" id="endTime" placeholder="Eind tijd">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="dropdown" class="col-sm-2 control-label">Waar wilt u op checken?</label>
                        <div class="col-sm-10">
                            <div class="dropdown">
                                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                    <span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Activiteit</a></li>
                                    <li><a href="#">Afwezigheid</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox">
                                <label>
                                    <input name="periodic" type="checkbox"> Periodiek checken
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" form="new-agenda-item-form" class="btn btn-primary">Opslaan</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>