{{> header}}

<div class="container-fluid">
    <div class="col-lg-2 col-md-2">
        {{> navigation}}
    </div>
    <div class="col-lg-10 col-md-10">
        <div class="row">

            <div class="panel panel-info">
                <div class="panel-heading">
                    Cameras
                </div>
                <div class="panel-body">
                    <div class="row">
                        {{#each cameras}}
                            <div class="col-md-2 col-lg-2 col-sm-6">
                                <div class="thumbnail">
                                    <div class="caption">
                                        <h3>{{this.cameraName}}</h3>
                                        <p>
                                            <a href="/cameras/{{_id}}" class="btn btn-primary btn-block" role="button">
                                                Bekijk camera
                                            </a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                        <div class="col-md-2 col-lg-2 col-sm-6">
                            <div class="thumbnail">
                                <div class="caption">
                                    <button type="button" class="btn-block btn" data-toggle="modal"
                                            data-target="#newCamera">
                                        Nieuwe camera
                                    </button>
                                    {{> newCameraModal }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
